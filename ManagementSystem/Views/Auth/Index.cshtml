@model IEnumerable<User>

@{
    ViewData["Title"] = "Kullanıcılar";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered shadow-sm rounded">
            <thead class="thead-dark">
                <tr>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Kullanıcı Adı</th>
                    <th>Kullanıcı Tipi</th>
                    <th class="text-right">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.UserName</td>
                        <td>@user.UserType</td>
                        <td class="text-right">
                            <a href="@Url.Action("Edit", "Auth", new { id = user.Id })" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit fa-lg"></i>
                            </a>

                            <!-- Silme işlemi için form -->
                            <form action="@Url.Action("Delete", "Auth", new { id = user.Id })" method="post" class="d-inline" onsubmit="return confirm('Bu kullanıcıyı silmek istediğinizden emin misiniz?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger btn-sm ml-2">
                                    <i class="fas fa-trash fa-lg"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-center mt-4">
        <a href="@Url.Action("Create", "Auth")" class="btn btn-success">
            <i class="fas fa-plus fa-lg"></i>
            Kullanıcı Ekle
        </a>
    </div>
</div>
