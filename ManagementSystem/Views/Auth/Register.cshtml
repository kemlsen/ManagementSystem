@using ManagementSystem.Models.ViewModels
@model RegisterViewModel

<nav class="navbar navbar-dark bg-dark px-4">
    <a class="navbar-brand text-white" href="#">Admin Panel</a>
    <div class="d-flex">
        <a href="/auth/index" class="nav-link text-white">Kullanıcılar</a>
        <a href="/appointments/index" class="nav-link text-white ms-3">Randevular</a>
    </div>
</nav>

<div class="content-wrapper d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg border-0" style="width: 100%; max-width: 400px; border-radius: 10px;">
        <div class="card-body p-4">
            <div class="text-center mb-4">
                <h3 class="fw-bold text-primary">Kayıt Ol</h3>
            </div>
            <form asp-action="Register" method="post">
                <div class="mb-3">
                    <label for="FirstName" class="form-label">Ad</label>
                    <input type="text" id="FirstName" name="FirstName" class="form-control" asp-for="FirstName" placeholder="Ad girin" required />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="LastName" class="form-label">Soyad</label>
                    <input type="text" id="LastName" name="LastName" class="form-control" asp-for="LastName" placeholder="Soyad girin" required />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="UserName" class="form-label">Kullanıcı Adı</label>
                    <input type="text" id="UserName" name="UserName" class="form-control" asp-for="UserName" placeholder="Kullanıcı adı girin" required />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="UserType" class="form-label">Kullanıcı Tipi</label>
                    <select id="UserType" name="UserType" class="form-select" asp-for="UserType" asp-items="ViewBag.UserTypes" required>
                        <option value="" disabled selected>Seçiniz...</option>
                    </select>
                    <span asp-validation-for="UserType" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Password" class="form-label">Şifre</label>
                    <input type="password" id="Password" name="Password" class="form-control" asp-for="Password" placeholder="Şifre girin" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
