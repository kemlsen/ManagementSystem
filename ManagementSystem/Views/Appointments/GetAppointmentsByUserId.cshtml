@using ManagementSystem.Models.Entities
@using ManagementSystem.Models.Helpers
@model IEnumerable<Appointment>

@{
    ViewData["Title"] = "Randevularım";
}
<nav class="navbar navbar-dark bg-dark px-4">
    <a class="navbar-brand text-white" href="#">User Panel</a>
    <div class="d-flex">
        <a href="/appointments/getappointmentsbyuserId" class="nav-link text-white ms-3">Randevularım</a>
    </div>
</nav>

<div class="container mt-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered shadow-sm rounded">
            <thead class="thead-dark">
                <tr>
                    <th>Kullanıcı</th>
                    <th>Servis</th>
                    <th>Tarih</th>
                    <th>Durum</th>
                    <th class="text-right">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appointment in Model)
                {
                    <tr>
                        <td>@appointment.User.UserName</td>
                        <td>@appointment.Service.Name</td>
                        <td>@appointment.AppointmentDate.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@EnumHelper.GetEnumDescription(appointment.Status)</td>
                        <td class="text-right">
                            <a href="javascript:void(0);"
                               class="btn btn-warning btn-sm editStatusBtn"
                               data-id="@appointment.Id"
                               data-status="@((int)appointment.Status)"
                               data-appointmentdate="@appointment.AppointmentDate.ToString("yyyy-MM-ddTHH:mm")">
                                <i class="fas fa-edit fa-lg"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-center mt-4">
        <a href="@Url.Action("Create", "Appointments")" class="btn btn-success">
            <i class="fas fa-plus fa-lg"></i> Randevu Ekle
        </a>
    </div>
</div>

<div class="modal fade" id="editStatusModal" tabindex="-1" role="dialog" aria-labelledby="editStatusModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content rounded-lg shadow-lg">
            <form id="editStatusForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="editStatusModalLabel">Randevu Durumunu Güncelle</h5>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="editAppointmentId" />
                    <div class="form-group">
                        <label for="editUserName">Servis</label>
                        <input type="number" class="form-control" id="editAppointmentService" required />
                    </div>
                    <div class="form-group">
                        <label for="editAppointmentDate">Randevu Tarihi</label>
                        <input type="datetime-local" class="form-control" id="editAppointmentDate" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).on('click', '.editStatusBtn', function () {
            var appointmentId = $(this).data('id');
            var appointmentDate = $(this).data('appointmentdate'); // Appointment Date from data attribute

            $('#editAppointmentId').val(appointmentId);
            $('#editAppointmentDate').val(appointmentDate); 

            $('#editStatusModal').modal('show');
        });

        $('#editStatusForm').on('submit', function (e) {
            e.preventDefault();

            var data = {
                Id: $('#editAppointmentId').val(),
                AppointmentDate: $('#editAppointmentDate').val(),
                ServiceId: $('#editAppointmentService').val()
            };

            $.ajax({
                url: '/Appointments/UpdateAppointment',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(data),
                success: function () {
                    $('#editStatusModal').modal('hide');
                    location.reload();
                },
                error: function () {
                    alert("Durum güncellenirken bir hata oluştu.");
                }
            });
        });
    </script>
}
